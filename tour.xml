  <scene name="scene_two" title="The Exit" onstart="stopsound(scene_one_background); playsound(scene_two_background, 'hakalau-forest.mp3|hakalau-forest.ogg', 0);" thumburl="assets/panos/scene_two.tiles/thumb.jpg" lat="" lng="" heading="">
