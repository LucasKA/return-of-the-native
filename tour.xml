
<krpano version="1.17.1" title="Return of the Native" onstart="startup();">
<!--  <include url="assets/skin/vtourskin.xml" />-->

   <!-- starts up this panorama with the first scene -->
  <action name="startup">
  if(startscene === null, copy(startscene,scene[0].name));
  loadscene(get(startscene), null, MERGE);
  </action>

  <control mousetype="moveto"
    zoomtocursor="true"
    zoomoutcursor="true"
    mouseaccelerate="0.5"
    mousespeed="7"
    mousefriction="0.8"
    mousefovchange="0.5"
    fovspeed="0.6"
    keybfriction="0.55"
    keybaccelerate="0.3"
    keybfovchange="0.75"
    keybspeed="0.4"
    fovfriction="0.9"
    touchfriction="0.9"
    trackpadzoom="true"
  />

  <!-- plugins loaded -->
  <plugin name="soundinterface" url="plugins/soundinterface.js" preload="true" rootpath="assets/audio" volume="1.0" mute="false" />
